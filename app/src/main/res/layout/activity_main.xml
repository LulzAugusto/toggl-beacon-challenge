<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.toggl.challenge.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/toggl_logo_dark"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tracking"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_description"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:singleLine="true"
        android:hint="Enter Description" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:id="@+id/button_test"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:onClick="onClickTest" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_duration"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="82dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:typeface="normal"
        android:text="00:00" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_duration2"
        android:textSize="80dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:typeface="normal"
        android:text="00:00"
        android:layout_alignBottom="@+id/text_duration"
        android:layout_alignParentStart="true" />
</RelativeLayout>
